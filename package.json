{
    "name": "plot",
    "version": "0.0.3",
    "description": "The simplest plotting API for JavaScript and TypeScript.",
    "main": "build/index.js",
    "types": "build/index.d.ts",
    "scripts": {
        "c": "npm run clean",
        "clean": "rm -rf build/*",
        "b": "npm run build",
        "build": "tsc",
        "cb": "npm run clean-build",
        "clean-build": "npm run clean && npm run build",
        "build:watch": "tsc --watch",
        "clean-build:watch": "rm -rf build/* && tsc --watch",
        "prepublishOnly": "npm run setup && npm test && npm run clean-build",
        "l": "npm run lint",
        "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
        "pretest": "npm run lint",
        "t": "npm run test",
        "test": "jest",
        "tw": "npm run test:watch",
        "test:watch": "jest --watch",
        "api-docs": "typedoc --options typedoc.json --out docs/api ./src/index.ts ./src/plot-api.ts ./src/chart-def.ts"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/data-forge-notebook/plot.git"
    },
    "keywords": [],
    "author": "ashley@codecapers.com.au",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/data-forge-notebook/plot/issues"
    },
    "homepage": "https://github.com/data-forge-notebook/plot#readme",
    "dependencies": {
        "@data-forge-plot/apex": "0.2.1",
        "@data-forge-plot/chart-def": "^1.4.1",
        "@data-forge/serialization": "^1.0.0",
        "inflate-template": "^1.1.6",
        "opn": "^5.5.0",
        "resolve-cwd": "^3.0.0",
        "typy": "3.0.1"
    },
    "devDependencies": {
        "@types/jest": "24.0.6",
        "@types/node": "10.11.4",
        "jest": "24.1.0",
        "ts-jest": "23.10.5",
        "ts-node": "7.0.1",
        "tslint": "5.12.1",
        "typedoc": "0.15.0",
        "typescript": "3.1.1"
    }
}
